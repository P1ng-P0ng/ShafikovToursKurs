<Window x:Class="ShafikovTours.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShafikovTours"
        mc:Ignorable="d"
        Title="TourAgency" MinHeight="650" MinWidth="1400" FontFamily = "Arial" Icon="pictures\logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <!--<RowDefinition Height="30"/>-->
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#FF00CEAD"/>
        <!--<Border Grid.Row="2" Background="#FF00CEAD"/>-->
        <TextBlock Text="Туры" Grid.Row="0" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image Source="pictures\logo.png" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <Frame Name="MainFrame" Grid.Row="1" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"/>
        <Button Name="BackBtn" Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Center" Click="BackBtn_Click"/>
    </Grid>
</Window>
